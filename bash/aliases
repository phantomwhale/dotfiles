alias aliases='vim ~/.dotfiles/bash/aliases'
alias bi='bundle install'
alias be='bundle exec'
alias bu='bundle update'
alias c='cd ~/code'
alias d='cd ~/.dotfiles'
alias get='sudo apt-get install'
alias killruby='killall -9 ruby'
alias restart_apache="sudo /etc/init.d/apache2 restart"
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log *'
alias rc='rails console'
alias rdm="be rake db:migrate"
alias rdtp="be rake db:test:prepare"
alias t='todo.sh'
alias tt="timetrap"
alias tmux='tmux -2'
alias vi='vim'
alias topcom='history | awk '"'"'{a[$2]++}END{for(i in a){print a[i] " " i}}'"'"' | sort -rn | head -20'

__bundle_exec_custom () {
  if [ -f Gemfile.local  ]
  then
    BUNDLE_GEMFILE="Gemfile.local" bundle exec $@
  else
    bundle exec $@
  fi

}

alias bec='__bundle_exec_custom'
