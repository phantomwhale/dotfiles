[user]
  name =  Ben Turner
  email = ben.turner@pobox.com
[alias]
  b = branch
  bp = "!git branch --merged | grep -Ev '(\\*|master$|main$)' | xargs git branch -d"
  branches-prune = bp
  co = checkout
  st = status
  di = diff
  dc = diff --cached
  dh1 = diff HEAD~1
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
  amend = commit --amend
  lt = describe --tags
  lgt = log --graph --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %s %Cgreen(%cr) %C(blue bold)<%an>%Creset' --abbrev-commit
  lgtt = lgt --first-parent --topo-order --all
  tagh = for-each-ref --format '%(refname) %09 %(taggerdate) %(subject) %(taggeremail)' refs/tags  --sort=taggerdate
  ctags = !.git/hooks/ctags
  gone = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
[color]
  diff = auto
  status = auto
  branch = auto
[commit]
  verbose = true
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[branch]
  autosetuprebase = always
[push]
  default = current
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[fetch]
	prune = true
[url "git@github.com:"]
	insteadOf = https://github.com/
# [url "ssh://git@gitlab.com/"]
[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/
[rebase]
	autosquash = true
	autostash = true
[includeIf "gitdir:~/code/99designs/"]
  path = ~/code/99designs/.gitconfig
