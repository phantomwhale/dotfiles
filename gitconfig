[user]
	name =  Ben Turner
	email = ben.turner@pobox.com
[alias]
  b = branch
  co = checkout
  st = status
  di = diff
  dc = diff --cached
  dh1 = diff HEAD~1
  amend = commit --amend
  lt = describe --tags
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lgtt = log --graph --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %s %Cgreen(%cr) %C(blue bold)<%an>%Creset' --abbrev-commit
	ctags = !.git/hooks/ctags
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[branch]
  autosetuprebase = always
[init]
	templatedir = ~/.git_template
[push]
	default = simple
